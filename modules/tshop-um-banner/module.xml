            </section>
        </group>
        <group title="显示设置">
            <section title="" folded="false">
                <param description="" formType="range" label="滚动公告" name="banner_gonggaogg" ptype="text">
				 	<option value="1" selected="selected">显示</option>
                    <option value="0">隐藏</option>  
				</param>
                <param description="" formType="range" label="收藏店铺" name="banner_shoucang" ptype="text">
				 	<option value="1" selected="selected">显示</option>
