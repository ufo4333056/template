                <param description="字体选择" formType="select" label="字体选择" name="family" ptype="text">
                    <option value="微软雅黑" selected="selected">微软雅黑</option>
                    <option value="黑体">黑体</option>
                    <option value="宋体">宋体</option>
                    <option value="幼圆">幼圆</option>
                    <option value="华文楷体">华文楷体</option>  
                </param>
                <param description="字体粗细" formType="select" label="字体粗细" name="font_weight_f" ptype="text">
                    <option value="bold" selected="selected">加粗</option>
                    <option value="normal">不加粗</option>                 
                </param>
                <param description="字体间距" formType="text" label="字体间距" name="letter_spacing" ptype="number">0</param>
            </section>
            <section title="搜索设置" folded="true">
                <param description="如,包邮,促销,外套,最热卖的服装关键字" formType="text" label="搜索热门字" name="hotwz" ptype="text">新品</param>
