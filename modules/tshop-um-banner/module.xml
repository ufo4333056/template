                    <option value="0">隐藏</option>  
				</param>
                <param description="" formType="range" label="客服中心" name="banner_wangwang" ptype="text">
				 	<option value="1" selected="selected">显示</option>
                    <option value="0">隐藏</option>  
				</param>
                <param description="" formType="range" label="搜索宝贝" name="shaosongshezhi" ptype="text">
				 	<option value="1" selected="selected">显示</option>
                    <option value="0">隐藏</option>  
				</param>
                <param description="" formType="range" label="宝贝推荐" name="h-goods" ptype="text">
				 	<option value="1" selected="selected">显示</option>
                    <option value="0">隐藏</option>  
				</param>
                <param description="" formType="range" label="倒计时" name="h-time" ptype="text">
				 	<option value="1" selected="selected">显示</option>
                    <option value="0">隐藏</option>  
				</param>
            </section>
        </group>
    </parameters>
</module>
